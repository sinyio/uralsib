{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@/*": ["src/*"],
      "@app/*": ["app/*"],
      "@layouts/*": ["app/layouts/*"],
      "@modules/*": ["modules/*"],
      "@pages/*": ["pages/*"],
      "@router/*": ["router/*"],
      "@store/*": ["store/*"],
      "@shared/*": ["shared/*"],
      "@styles/*": ["styles/*"],
      "@hooks/*": ["shared/hooks/*"],
      "@components/*": ["shared/components/*"],
      "@assets/*": ["shared/assets/*"],
      "@api/*": ["shared/api/*"],
      "@ui/*": ["shared/ui/*"],
    },
  },
  "include": [
    "src"
  ]
}
